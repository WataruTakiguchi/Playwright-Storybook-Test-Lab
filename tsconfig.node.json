{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"]
  },
  "include": [
    "vite.config.ts",
    "playwright.config.ts",
    "playwright-ct.config.ts",
    "playwright/*.tsx",
    ".storybook/*.ts",
    "tests/**/*.ts"
  ]
}
